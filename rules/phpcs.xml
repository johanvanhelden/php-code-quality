<?xml version="1.0"?>
<ruleset name="Laravel Code Quality">
    <arg name="report-width" value="80"/>
    <arg name="report" value="full"/>
    <arg name="extensions" value="php"/>
    <arg name="encoding" value="utf-8"/>

    <!-- Common exclusions for Laravel projects -->
    <exclude-pattern>public/index.php</exclude-pattern>
    <exclude-pattern>server.php</exclude-pattern>
    <exclude-pattern>resources/views/*</exclude-pattern>
    <exclude-pattern>bootstrap/cache/*</exclude-pattern>
    <exclude-pattern>storage/*</exclude-pattern>

    <!-- Standard exclusions -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>

    <rule ref="Generic.Files.LineLength.TooLong">
       <exclude-pattern>config/*</exclude-pattern>
       <exclude-pattern>lang/*</exclude-pattern>
    </rule>

    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>database/migrations/*</exclude-pattern>
    </rule>

    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>tests/*</exclude-pattern>
    </rule>

    <rule ref="Generic.Metrics.CyclomaticComplexity">
        <properties>
            <property name="complexity" value="22" />
            <property name="absoluteComplexity" value="11" />
        </properties>
    </rule>

    <rule ref="PSR12" />
</ruleset>
